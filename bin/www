#!/usr/bin/env node

/**
 * Module dependencies.
 */

var app = require('../app');
var debug = require('debug')('projectsocket:server');
var http = require('http');
/**
 * Get port from environment and store in Express.
 */

var port = normalizePort(process.env.PORT || '3000');
app.set('port', port);

/**
 * Create HTTP server.
 */

var server = http.createServer(app);

/**
 * Setup Socket env
 */
const fs = require('fs');
const card_json = JSON.parse(fs.readFileSync('public/json/card.json', 'utf8'));

var io = require('socket.io')(server, {
  cors: {
    origin: "*"
  }
});
var roomNum = 1;
var usersId = [];
var rooms = [];

var turn_host = [];
var turn_guest = [];

io.on('connection', (socket) => {
  socket.on('disconnect', () => {
    console.log('user disconnected');
  });

  // In lobby
  socket.on('createId', createId);
  socket.on('createRoom', createRoom);
  socket.on('joinRoom', joinRoom);
  socket.on('getReady', getReady);
  socket.on('leaveRoom', leaveRoom);
  socket.on('refreshRoom', refreshRoom);

  function createId(id) {
    const index = usersId.findIndex((item) => {
      return item == id;
    });
    var isValidId;
    if (index > -1) {
      isValidId = false;
    } else {
      usersId.push(id);
      isValidId = true;
    }
    io.to(socket.id).emit('checkId', isValidId);
  }

  async function createRoom(id, roomTitle) {
    await socket.join(roomNum);
    var clients = io.sockets.adapter.rooms.get(roomNum);
    var clientsNum = clients.size;
    var host = id;
    var guest = "";
    var roomInfo = [roomNum, roomTitle, host, guest, clientsNum];
    rooms.push(roomInfo);
    io.emit('createRoom', rooms);
    io.sockets.in(roomNum).emit('createdRoom', roomInfo);
    roomNum += 1;
  }

  async function joinRoom(id, roomNum) {
    await socket.join(roomNum);
    var clients = io.sockets.adapter.rooms.get(roomNum);
    var clientsNum = clients.size;
    var guest = id;
    const index = rooms.findIndex((item) => {
      return item[0] == roomNum
    });
    rooms[index][3] = guest;
    rooms[index][4] = clientsNum;
    var roomInfo = rooms[index];
    io.emit('joinRoom', roomNum, clientsNum);
    io.sockets.in(roomNum).emit('joinedRoom', roomInfo);
  }

  function getReady() {
    const roomNum = [...socket.rooms][1];
    io.sockets.in(roomNum).emit('getReady');
  }

  function leaveRoom(id) {
    const roomNum = [...socket.rooms][1];
    const index = rooms.findIndex((item) => {
      return item[0] == roomNum
    });
    // If no room has been created, terminate the function.
    if (index == -1) {
      return;
    }
    const host = rooms[index][2];
    const guest = rooms[index][3];
    if (id == host) {
      // If there's no guest and only host exists
      if (rooms[index][4] == 1) {
        deleteRoom(roomNum);
      } else {
        rooms[index][2] = guest;
        rooms[index][3] = "";
        rooms[index][4] = 1;
        socket.broadcast.to(roomNum).emit('changeHost');
      }
    } else {
      socket.broadcast.to(roomNum).emit('guestExit');
      rooms[index][3] = "";
      rooms[index][4] = 1;
    }
    io.emit('refreshRoom', rooms);
    socket.leave(roomNum);
  }

  function refreshRoom() {
    io.to(socket.id).emit('refreshRoom', rooms);
  }

  function deleteRoom(roomNum) {
    const index = rooms.findIndex((item) => {
      return item[0] == roomNum
    });
    if (index > -1) {
      rooms.splice(index, 1);
    }
    io.emit('refreshRoom', rooms);
  }

  // In game
  socket.on('startGame', startGame);
  socket.on('getPlayer', getPlayer);
  socket.on('enterBattlePhase', enterBattlePhase);
  socket.on('enterSelectPhase',enterSelectPhase);
  socket.on('win', win);
  socket.on('draw', draw);

  function startGame() {
    const roomNum = [...socket.rooms][1];
    const index = rooms.findIndex((item) => {
      return item[0] == roomNum
    });
    if (index > -1) {
      const room = rooms[index];
      io.sockets.in(roomNum).emit('startGame', room);
    }
  }

  function getPlayer() {
    const roomNum = [...socket.rooms][1];
    const index = rooms.findIndex((item) => {
      return item[0] == roomNum
    });
    // If no room has been created, terminate the function.
    if (index == -1) {
      return;
    }
    const host = rooms[index][2];
    const guest = rooms[index][3];
    io.to(socket.id).emit('getPlayer', host, guest);
  }

  function enterBattlePhase(nextTurn, id) {
    console.info('enterBattlePhase() executed.',nextTurn,id);
    const roomNum = [...socket.rooms][1];
    const index = rooms.findIndex((item) => {
      return item[0] == roomNum
    });
    //If no room has been created, terminate the function.
    if (index == -1) {
      return;
    }
    const host = rooms[index][2];
    const guest = rooms[index][3];
    if (id == host) {
      for (var i = 0; i < 3; i++) {
        card_json.filter((data) => {
          if (data.name == nextTurn[i].objects[1].text) {
            turn_host.push(data);
          }
        })
      }
    } else if (id == guest) {
      for (var i = 0; i < 3; i++) {
        card_json.filter((data) => {
          if (data.name == nextTurn[i].objects[1].text) {
            turn_guest.push(data);
          }
        })
      }
    }
    if ((turn_host.length == 3) && (turn_guest.length == 3)) {
      io.sockets.in(roomNum).emit('battle', turn_host, turn_guest);
    }
  }

  function enterSelectPhase() {
    console.info('enterSelectPhase() executed.');
    const roomNum = [...socket.rooms][1];
    io.sockets.in(roomNum).emit('select');
  }

  function win(player) {
    const roomNum = [...socket.rooms][1];
    io.sockets.in(roomNum).emit('win', player);
  }

  function draw() {
    const roomNum = [...socket.rooms][1];
    io.sockets.in(roomNum).emit('draw');
  }
});

/**
 * Listen on provided port, on all network interfaces.
 */

server.listen(port);
server.on('error', onError);
server.on('listening', onListening);

/**
 * Normalize a port into a number, string, or false.
 */

function normalizePort(val) {
  var port = parseInt(val, 10);

  if (isNaN(port)) {
    // named pipe
    return val;
  }

  if (port >= 0) {
    // port number
    return port;
  }

  return false;
}

/**
 * Event listener for HTTP server "error" event.
 */

function onError(error) {
  if (error.syscall !== 'listen') {
    throw error;
  }

  var bind = typeof port === 'string' ?
    'Pipe ' + port :
    'Port ' + port;

  // handle specific listen errors with friendly messages
  switch (error.code) {
    case 'EACCES':
      console.error(bind + ' requires elevated privileges');
      process.exit(1);
      break;
    case 'EADDRINUSE':
      console.error(bind + ' is already in use');
      process.exit(1);
      break;
    default:
      throw error;
  }
}

/**
 * Event listener for HTTP server "listening" event.
 */

function onListening() {
  var addr = server.address();
  var bind = typeof addr === 'string' ?
    'pipe ' + addr :
    'port ' + addr.port;
  debug('Listening on ' + bind);
}