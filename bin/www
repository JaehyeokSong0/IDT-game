#!/usr/bin/env node

/**
 * Module dependencies.
 */

var app = require('../app');
var debug = require('debug')('projectsocket:server');
var http = require('http');
var mysql = require('mysql')
/**
 * Get port from environment and store in Express.
 */

var port = normalizePort(process.env.PORT || '3000');
app.set('port', port);

/**
 * Create HTTP server.
 */

var server = http.createServer(app);

/**
 * Setup Socket env
 */

var io = require('socket.io')(server, {
  cors: {
    origin: "*"
  }
});
var roomNum = 1;
var rooms = [];
io.on('connection', (socket) => {
  socket.on('disconnect', () => {
    console.log('user disconnected');
  });

  socket.on('createRoom', createRoom);
  socket.on('joinRoom', joinRoom);
  socket.on('getReady', getReady);
  socket.on('leaveRoom',leaveRoom);

  async function createRoom(id, roomTitle) {
    await socket.join(roomNum);
    var clients = io.sockets.adapter.rooms.get(roomNum);
    var clientsNum = clients.size;
    var host = id;
    rooms.push([host, roomNum, roomTitle, clientsNum]);
    io.emit('createRoom', rooms);
    roomNum += 1;
  }
  async function joinRoom(id, roomNum) {
    await socket.join(roomNum);
    var clients = io.sockets.adapter.rooms.get(roomNum);
    var clientsNum = clients.size;
    var guest = id;
    io.emit('joinRoom', roomNum, clientsNum);
    //for waiting room
    //io.sockets.in(roomNum).emit('joinedRoom',guest);
  }
  function getReady() {
    const roomNum = [...socket.rooms][1];
    io.sockets.in(roomNum).emit('getReady');
  }
  function leaveRoom() {
    const roomNum = [...socket.rooms][1];
    const index = rooms.findIndex((item)=>{return item[1] == roomNum});
    if(index >-1) {
      rooms.splice(index,1);
    }
    socket.leave(roomNum);
    io.emit('leaveRoom',rooms);
  }
});

/**
 * Listen on provided port, on all network interfaces.
 */

server.listen(port);
server.on('error', onError);
server.on('listening', onListening);

/**
 * Normalize a port into a number, string, or false.
 */

function normalizePort(val) {
  var port = parseInt(val, 10);

  if (isNaN(port)) {
    // named pipe
    return val;
  }

  if (port >= 0) {
    // port number
    return port;
  }

  return false;
}

/**
 * Event listener for HTTP server "error" event.
 */

function onError(error) {
  if (error.syscall !== 'listen') {
    throw error;
  }

  var bind = typeof port === 'string' ?
    'Pipe ' + port :
    'Port ' + port;

  // handle specific listen errors with friendly messages
  switch (error.code) {
    case 'EACCES':
      console.error(bind + ' requires elevated privileges');
      process.exit(1);
      break;
    case 'EADDRINUSE':
      console.error(bind + ' is already in use');
      process.exit(1);
      break;
    default:
      throw error;
  }
}

/**
 * Event listener for HTTP server "listening" event.
 */

function onListening() {
  var addr = server.address();
  var bind = typeof addr === 'string' ?
    'pipe ' + addr :
    'port ' + addr.port;
  debug('Listening on ' + bind);
}