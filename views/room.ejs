<!-- CreateRoom / WaitingRoom -->
<link rel='stylesheet' href='/stylesheets/room.css' />
<div class="modal" id="roomModal">
    <div id="waitingRoom">
        <span class="playerInfo" id="hostInfo"></span>
        <span class="roomInfo" id="roomNumInfo"></span>
        <span class="roomInfo" id="roomTitleInfo"></span>
        <span class="playerInfo" id="guestInfo"></span>
    </div>
    <div id="createRoomInfo">
        <input placeholder="Input Game Title">
        <button>CREATE</button>
    </div>
    <div id="waitingRoom_host">
        <button disabled>START GAME</button>
    </div>
    <div id="waitingRoom_guest">
        <button>GET READY</button>
    </div>
    <button id="exit_btn">EXIT</button>
</div>